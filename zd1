import sys
import csv
import os

class Library():
    def __init__(self, name, year, author):
        self.name = name
        self.year = year
        self.author = author

    def book(self):
        print(self.name, self.author, self.year)

b1 = 'Mob Psycho 100 -', 2012, '- ONE'
b2 = 'Blich -', 2001, '- Тайто Кубо'
b3 = 'Berserk -', 1989, '- Кэнтаро Миура'

print('Вы вошли в библиотеку')
while True:
