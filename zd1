                choice2 = input('Введите название:')
                if choice2 == 'Mob Psycho 100':
                    print('Mob Psycho 100 -', 2012, '- ONE')
                elif choice2 == 'Blich':
                    print('Blich -', 2001, '- Тайто Кубо')
                elif choice2 == 'Berserk':
                    print('Berserk -', 1989, '- Кэнтаро Миура')
                else:
                    print('Такой книги нет')
            elif found == 2:
                choice2 = input('Введите дату:')
                if choice2 == '2012':
                    print('Mob Psycho 100 -', 2012, '- ONE')
                elif choice2 == '2001':
                    print('Blich -', 2001, '- Тайто Кубо')
                elif choice2 == '1989':
                    print('Berserk -', 1989, '- Кэнтаро Миура')
                else:
                    print('Такой книги нет')
            elif found == 3:
                choice2 = input('Введите название:')
                if choice2 == 'Кэнтаро Миура':
                    print('Berserk -', 1989, '- Кэнтаро Миура')
                elif choice2 == 'Тайто Кубо':
                    print('Blich -', 2001, '- Тайто Кубо')
                elif choice2 == 'ONE':
                    print('Mob Psycho 100 -', 2012, '- ONE')
                else:
                    print('Такой книги нет')
    elif choice == 3:
        print('Добавьте книгу')
        filename = input()
        print('Книга была добавлена')
    elif choice == 4:
        os.remove('C:\pythonProject\\text.txt')
